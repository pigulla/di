{
    "name": "@digitally-imported/meta",
    "version": "0.0.2",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "author": "Raphael Pigulla <pigulla@four66.com>",
    "homepage": "https://github.com/pigulla/di",
    "repository": {
        "type": "git",
        "url": "https://github.com/pigulla/di.git"
    },
    "bugs": {
        "url": "https://github.com/pigulla/di/issues"
    },
    "license": "MIT",
    "scripts": {
        "setup": "rm -rf node_modules && yarn workspaces run clean && yarn && yarn run build",
        "build": "yarn run build:dto && yarn run build:client && yarn run build:cli && yarn run build:i3-blocklet && yarn run build:server && yarn run build:integration-test",
        "build:cli": "yarn workspace @digitally-imported/cli run build",
        "build:client": "yarn workspace @digitally-imported/client run build",
        "build:dto": "yarn workspace @digitally-imported/dto run build",
        "build:i3-blocklet": "yarn workspace @digitally-imported/i3-blocklet run build",
        "build:integration-test": "yarn workspace @digitally-imported/integration-test run build",
        "build:server": "yarn workspace @digitally-imported/server run build",
        "integration-test": "yarn workspace @digitally-imported/integration-test run start",
        "test": "yarn run build && lerna run test && yarn audit && yarn run lockfile-lint",
        "lockfile-lint": "npx lockfile-lint --path yarn.lock --type yarn --validate-https --allowed-hosts yarn",
        "codecov": "lerna run codecov"
    },
    "devDependencies": {
        "lerna": "^3.21.0"
    }
}
