{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "paths": {
            "@cli": [
                "packages/cli/src/index.ts"
            ],
            "@cli/*": [
                "packages/cli/src/*"
            ],
            "@test": [
                "packages/cli/test/index.ts"
            ],
            "@test/*": [
                "packages/cli/test/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}
