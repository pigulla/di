{
    "extends": "./node_modules/@digitally-imported/settings/tsconfig",
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "rootDir": "src",
        "paths": {
            "@cli": [
                "src/index.ts"
            ],
            "@cli/*": [
                "src/*"
            ],
            "@test": [
                "test/index.ts"
            ],
            "@test/*": [
                "test/*"
            ]
        }
    }
}
