{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "paths": {
            "@client": [
                "packages/client/src/index.ts"
            ],
            "@client/*": [
                "packages/client/src/*"
            ],
            "@test": [
                "packages/client/test/index.ts"
            ],
            "@test/*": [
                "packages/client/test/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}
