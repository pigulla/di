{
    "extends": "../settings/tsconfig.json",
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "rootDir": ".",
        "paths": {
            "@client": [
                "src/index.ts"
            ],
            "@client/*": [
                "src/*"
            ],
            "@client-test": [
                "test/index.ts"
            ],
            "@client-test/*": [
                "test/*"
            ]
        }
    }
}
