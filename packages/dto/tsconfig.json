{
    "extends": "./node_modules/@digitally-imported/settings/tsconfig.json",
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "rootDir": "src",
        "paths": {
            "@dto": [
                "src/index.ts"
            ],
            "@dto/*": [
                "src/*"
            ],
            "@dto-test": [
                "test/index.ts"
            ],
            "@dto-test/*": [
                "test/*"
            ]
        }
    }
}
