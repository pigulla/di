{
    "extends": "./node_modules/@digitally-imported/settings/tsconfig.json",
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "rootDir": ".",
        "paths": {
            "@src": [
                "src/index.ts"
            ],
            "@src/*": [
                "src/*"
            ],
            "@test": [
                "test/index.ts"
            ],
            "@test/*": [
                "test/*"
            ]
        }
    }
}
